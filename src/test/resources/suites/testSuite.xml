<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="allSuites" verbose="2" parallel="false" thread-count="1">
    <groups>
        <run>
            <include name="firstGroup"  />
        </run>
    </groups>
    <test name="Exceptions">
        <classes>
            <class name="seleniumTestsPackage.TestWebPage_1">
                <methods>
                    <include name="openWebPage" />
                    <include name="enterTheMail" />
                </methods>
            </class>
        </classes>
    </test>
</suite>

